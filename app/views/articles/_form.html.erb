<%= form_with model: @article do |form| %>
  <div class="form-group" style="display-inline">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group" style="display-inline">
    <%= form.label :Description %><br>
    <%= form.text_area :desc %>
    <% @article.errors.full_messages_for(:desc).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div class="form-group" style="display-inline">
    <%= form.label :Img_Url %><br>
    <%= form.text_field :img %>
  </div>

   <div class="form-group" style="display-inline">
    <%= form.label :Start_Time %><br>
    <%= form.datetime_field :st_time, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
  </div>

   <div class="form-group" style="display-inline">
    <%= form.label :End_Time %><br>
    <%= form.datetime_field :end_time, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
  </div>

   <div class="form-group"  style="display-inline">
    <%= form.label :fee %><br>
    <%= form.number_field :fee %>
  </div>

   <div class="form-group" style="display-inline">
    <%= form.label :Venue %><br>
    <%= form.text_field :venue %>
  </div>
<br/>
   <div class="form-group" style="display-inline">
    <%= form.label :Event_type %><br>
    <%= form.text_field :etype %>
  </div>
    <br/>
   <div class="form-group"  style="display-inline">
    <%= form.label :Language %>
    <%= form.text_field :tag %>
  </div>
<br/>
  <div class="form-group" style="display-inline">
    <%= form.label :tags %>
    <%= form.text_field :tags,value: article.tags.map(&:name).join(",") %>
  </div>
  <br/>
  <br/>
  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>